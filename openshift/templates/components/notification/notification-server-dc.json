{
    "kind": "Template",
    "apiVersion": "template.openshift.io/v1",
    "metadata": {
        "name": "notification-server-dc",
        "creationTimestamp": null
    },
    "parameters": [
        {
            "name": "ENV_NAME",
            "displayName": "Environment name",
            "description": "Valid values: dev, test and prod",
            "required": true
        },
        {
            "name": "SOURCE_IS_NAME",
            "displayName": "The source image stream name",
            "description": "The image stream could trigger the deployment, valid values: notification-server-develop and notification-server",
            "required": true
        },
        {
            "name": "ENV_NAME_WITH_DASH",
            "value": "",
            "displayName": "Environment name",
            "description": "Sample values: -dev and -test. For prod, please don't pass in any value."
        },
        {
            "name": "ROUTE_NAME",
            "value": "",
            "displayName": "HOST name",
            "description": "Sample values: for dev dev-lowcarbonfuels-notification"
        },
        {
            "name": "ROUTE_HOST",
            "value": "",
            "displayName": "HOST name",
            "description": "Sample values: for dev dev-lowcarbonfuels.pathfinder.gov.bc.ca"
        }
    ],
    "objects": [
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "notification-server",
                "creationTimestamp": null
            },
            "spec": {
                "ports": [
                    {
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 3000
                    }
                ],
                "selector": {
                    "name": "notification-server"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "kind": "Route",
            "apiVersion": "route.openshift.io/v1",
            "metadata": {
                "name": "${ROUTE_NAME}",
                "creationTimestamp": null
            },
            "spec": {
                "host": "${ROUTE_HOST}",
                "path": "/socket.io",
                "to": {
                    "kind": "Service",
                    "name": "notification-server",
                    "weight": 100
                },
                "tls": {
                    "termination": "edge"
                },
                "wildcardPolicy": "None"
            },
            "status": {}
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "apps.openshift.io/v1",
            "metadata": {
                "name": "notification-server",
                "generation": 181,
                "creationTimestamp": null,
                "labels": {
                    "template": "notification-server"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "recreateParams": {
                        "timeoutSeconds": 600
                    },
                    "resources": {},
                    "activeDeadlineSeconds": 21600
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "notification-server"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "namespace": "mem-tfrs-tools",
                                "name": "${SOURCE_IS_NAME}:${ENV_NAME}"
                            },
                            "lastTriggeredImage": ""
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "test": false,
                "selector": {
                    "name": "notification-server"
                },
                "template": {
                    "metadata": {
                        "name": "notification-server",
                        "creationTimestamp": null,
                        "labels": {
                            "name": "notification-server"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "notification-server",
                                "image": "",
                                "ports": [
                                    {
                                        "containerPort": 3000,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "RABBITMQ_HOST",
                                        "value": "rabbit.mem-tfrs-${ENV_NAME}.svc"
                                    },
                                    {
                                        "name": "RABBITMQ_VHOST",
                                        "value": "/tfrs"
                                    },
                                    {
                                        "name": "RABBITMQ_USER",
                                        "value": "tfrs"
                                    },
                                    {
                                        "name": "RABBITMQ_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "rabbitmq-tfrs",
                                                "key": "TFRS_PASSWORD"
                                            }
                                        }
                                    },
                                    {
                                        "name": "NPM_RUN",
                                        "value": "start:notifications"
                                    },
                                    {
                                        "name": "KEYCLOAK_CERTS_URL",
                                        "value": "https://sso${ENV_NAME_WITH_DASH}.pathfinder.gov.bc.ca/auth/realms/tfrs${ENV_NAME_WITH_DASH}/protocol/openid-connect/certs"
                                    }
                                ],
                                "resources": {
                                    "limits": {
                                        "cpu": "250m",
                                        "memory": "500Mi"
                                    }
                                },
                                "readinessProbe": {
                                    "httpGet": {
                                        "path": "/",
                                        "port": 3000,
                                        "scheme": "HTTP"
                                    },
                                    "initialDelaySeconds": 10,
                                    "timeoutSeconds": 3,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "terminationMessagePath": "/dev/termination-log",
                                "terminationMessagePolicy": "File",
                                "imagePullPolicy": "IfNotPresent"
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {},
                        "schedulerName": "default-scheduler"
                    }
                }
            },
            "status": {
                "latestVersion": 0,
                "observedGeneration": 0,
                "replicas": 0,
                "updatedReplicas": 0,
                "availableReplicas": 0,
                "unavailableReplicas": 0
            }
        }
    ]
}
