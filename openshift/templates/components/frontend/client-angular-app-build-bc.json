{
    "kind": "Template",
    "apiVersion": "template.openshift.io/v1",
    "metadata": {
        "name": "client-angular-app-build",
        "creationTimestamp": null
    },
    "parameters": [
        {
            "name": "TFRS_RELEASE_TAG",
            "description": "The tag name for this release, sample value: v1.3.4",
            "required": true
        },
        {
            "name": "CLIENT_ANGULAR_APP_IS_NAME",
            "description": "The client angular app image stream name, valid values: client-angular-app or client-develop-angular-app",
            "required": true
        }
    ],
    "objects": [
        {
            "kind": "BuildConfig",
            "apiVersion": "build.openshift.io/v1",
            "metadata": {
                "name": "${CLIENT_ANGULAR_APP_IS_NAME}",
                "creationTimestamp": null,
                "labels": {
                    "build": "client-angular-app-build"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    }
                ],
                "runPolicy": "Serial",
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/bcgov/tfrs.git",
                        "ref": "${TFRS_RELEASE_TAG}"
                    },
                    "contextDir": "frontend"
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "namespace": "openshift",
                            "name": "nodejs:8"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${CLIENT_ANGULAR_APP_IS_NAME}:latest"
                    }
                },
                "resources": {
                    "limits": {
                        "cpu": "1",
                        "memory": "4Gi"
                    },
                    "requests": {
                        "memory": "2Gi"
                    }
                },
                "postCommit": {},
                "nodeSelector": null,
                "successfulBuildsHistoryLimit": 5,
                "failedBuildsHistoryLimit": 5
            },
            "status": {
                "lastVersion": 0
            }
        }
    ]
}
