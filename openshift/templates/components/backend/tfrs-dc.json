{
    "kind": "Template",
    "apiVersion": "template.openshift.io/v1",
    "metadata": {
        "name": "tfrs-dc",
        "creationTimestamp": null
    },
    "labels": {
        "template": "tfrs-backend-template"
    },
    "parameters": [
        {
            "name": "ENV_NAME",
            "displayName": "Environment name",
            "description": "Sample values: dev, test and prod",
            "required": true
        },
        {
            "name": "SOURCE_IS_NAME",
            "displayName": "The source image stream name",
            "description": "The image stream could trigger the deployment, sample values: tfrs-develop and tfrs",
            "required": true
        },
        {
            "name": "ROUTE_HOST_NAME",
            "displayName": "Route host name",
            "description": "Valid values: dev dev-lowcarbonfuels.pathfinder.gov.bc.ca",
            "required": true
        },
        {
            "name": "ROUTE_NAME",
            "displayName": "Route name",
            "description": "Valid values: dev dev-lowcarbonfuels-backend",
            "required": true
        },
        {
            "name": "KEYCLOAK_SA_BASEURL",
            "displayName": "KEYCLOAK_SA_BASEURL",
            "description": "Valid values: dev https://sso-dev.pathfinder.gov.bc.ca",
            "required": true
        },
        {
            "name": "KEYCLOAK_SA_CLIENT_ID",
            "displayName": "KEYCLOAK_SA_CLIENT_ID",
            "description": "Valid values: dev tfrs-dev-django-sa",
            "required": true
        },
        {
            "name": "KEYCLOAK_SA_REALM",
            "displayName": "KEYCLOAK_SA_REALM",
            "description": "Valid values: dev tfrs-dev",
            "required": true
        },
        {
            "name": "KEYCLOAK_AUDIENCE",
            "displayName": "KEYCLOAK_AUDIENCE",
            "description": "Valid values: dev tfrs-dev",
            "required": true
        },
        {
            "name": "KEYCLOAK_CERTS_URL",
            "displayName": "KEYCLOAK_CERTS_URL",
            "description": "Valid values: dev https://sso-dev.pathfinder.gov.bc.ca/auth/realms/tfrs-dev/protocol/openid-connect/certs",
            "required": true
        },
        {
            "name": "KEYCLOAK_CLIENT_ID",
            "displayName": "KEYCLOAK_CLIENT_ID",
            "description": "Valid values: dev tfrs-dev",
            "required": true
        },
        {
            "name": "KEYCLOAK_ISSUER",
            "displayName": "KEYCLOAK_ISSUER",
            "description": "Valid values: dev https://sso-dev.pathfinder.gov.bc.ca/auth/realms/tfrs-dev",
            "required": true
        },
        {
            "name": "KEYCLOAK_REALM",
            "displayName": "KEYCLOAK_REALM",
            "description": "Valid values: dev https://sso-dev.pathfinder.gov.bc.ca/auth/realms/tfrs-dev",
            "required": true
        }
    ],
    "objects": [
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "backend"
            },
            "spec": {
                "ports": [
                    {
                        "name": "web",
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "name": "tfrs"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${ROUTE_NAME}",
                "creationTimestamp": null,
                "annotations": { }
            },
            "spec": {
                "host": "${ROUTE_HOST_NAME}",
                "path": "/api",
                "to": {
                    "kind": "Service",
                    "name": "backend",
                    "weight": 100
                },
                "port": {
                    "targetPort": "web"
                },
                "tls": {
                    "termination": "edge"
                },
                "wildcardPolicy": "None"
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "apps.openshift.io/v1",
            "metadata": {
                "name": "tfrs",
                "generation": 1,
                "creationTimestamp": null,
                "labels": {
                    "template": "tfrs-app-environment"
                },
                "annotations": {
                    "description": "Defines how to deploy the application server"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "recreateParams": {
                        "timeoutSeconds": 600,
                        "mid": {
                            "failurePolicy": "Abort",
                            "execNewPod": {
                                "command": [
                                    "/bin/sh",
                                    "-c",
                                    "python manage.py migrate;"
                                ],
                                "containerName": "tfrs-app"
                            }
                        }
                    },
                    "resources": {},
                    "activeDeadlineSeconds": 21600
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "tfrs-app"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "namespace": "mem-tfrs-tools",
                                "name": "${SOURCE_IS_NAME}:${ENV_NAME}"
                            },
                            "lastTriggeredImage": ""
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "test": false,
                "selector": {
                    "name": "tfrs"
                },
                "template": {
                    "metadata": {
                        "name": "tfrs",
                        "creationTimestamp": null,
                        "labels": {
                            "name": "tfrs"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "tfrs-app",
                                "image": "",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "KEYCLOAK_SA_BASEURL",
                                        "value": "${KEYCLOAK_SA_BASEURL}"
                                    },
                                    {
                                        "name": "KEYCLOAK_SA_CLIENT_ID",
                                        "value": "${KEYCLOAK_SA_CLIENT_ID}"
                                    },
                                    {
                                        "name": "KEYCLOAK_SA_REALM",
                                        "value": "${KEYCLOAK_SA_REALM}"
                                    },
                                    {
                                        "name": "KEYCLOAK_AUDIENCE",
                                        "value": "${KEYCLOAK_AUDIENCE}"
                                    },
                                    {
                                        "name": "KEYCLOAK_CERTS_URL",
                                        "value": "${KEYCLOAK_CERTS_URL}"
                                    },
                                    {
                                        "name": "KEYCLOAK_CLIENT_ID",
                                        "value": "${KEYCLOAK_CLIENT_ID}"
                                    },
                                    {
                                        "name": "KEYCLOAK_ENABLED",
                                        "value": "true"
                                    },
                                    {
                                        "name": "KEYCLOAK_ISSUER",
                                        "value": "${KEYCLOAK_ISSUER}"
                                    },
                                    {
                                        "name": "KEYCLOAK_REALM",
                                        "value": "${KEYCLOAK_REALM}"
                                    },
                                    {
                                        "name": "KEYCLOAK_SA_CLIENT_SECRET",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "keycloak-sa-client-secret",
                                                "key": "KEYCLOAK_SA_CLIENT_SECRET"
                                            }
                                        }
                                    },
                                    {
                                        "name": "AMQP_HOST",
                                        "value": "rabbit.mem-tfrs-${ENV_NAME}.svc"
                                    },
                                    {
                                        "name": "AMQP_USER",
                                        "value": "tfrs"
                                    },
                                    {
                                        "name": "AMQP_VHOST",
                                        "value": "/tfrs"
                                    },
                                    {
                                        "name": "BYPASS_CLAMAV",
                                        "value": "false"
                                    },
                                    {
                                        "name": "EMAIL_FROM_ADDRESS",
                                        "value": "donotreply@gov.bc.ca"
                                    },
                                    {
                                        "name": "EMAIL_SENDING_ENABLED",
                                        "value": "true"
                                    },
                                    {
                                        "name": "MINIO_BUCKET_NAME",
                                        "value": "tfrs"
                                    },
                                    {
                                        "name": "SMTP_SERVER_HOST",
                                        "value": "apps.smtp.gov.bc.ca"
                                    },
                                    {
                                        "name": "DATABASE_SERVICE_NAME",
                                        "value": "postgresql"
                                    },
                                    {
                                        "name": "DATABASE_ENGINE",
                                        "value": "postgresql"
                                    },
                                    {
                                        "name": "DATABASE_NAME",
                                        "value": "tfrs"
                                    },
                                    {
                                        "name": "APP_CONFIG",
                                        "value": "/opt/app-root/src/gunicorn.cfg"
                                    },
                                    {
                                        "name": "DATABASE_USER",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "tfrs-postgresql",
                                                "key": "DATABASE_USER"
                                            }
                                        }
                                    },
                                    {
                                        "name": "DATABASE_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "tfrs-postgresql",
                                                "key": "DATABASE_PASSWORD"
                                            }
                                        }
                                    },
                                    {
                                        "name": "RABBITMQ_USER",
                                        "value": "tfrs"
                                    },
                                    {
                                        "name": "RABBITMQ_VHOST",
                                        "value": "/tfrs"
                                    },
                                    {
                                        "name": "RABBITMQ_HOST",
                                        "value": "rabbit.mem-tfrs-${ENV_NAME}.svc"
                                    },
                                    {
                                        "name": "RABBITMQ_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "rabbitmq-tfrs",
                                                "key": "TFRS_PASSWORD"
                                            }
                                        }
                                    },
                                    {
                                        "name": "MINIO_ENDPOINT",
                                        "value": "docs-mem-tfrs-${ENV_NAME}.pathfinder.gov.bc.ca:443"
                                    },
                                    {
                                        "name": "MINIO_USE_SSL",
                                        "value": "true"
                                    },
                                    {
                                        "name": "DOCUMENTS_API_ENABLED",
                                        "value": "true"
                                    },
                                    {
                                        "name": "MINIO_ACCESS_KEY",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "tfrs-minio-secret",
                                                "key": "MINIO_ACCESS_KEY"
                                            }
                                        }
                                    },
                                    {
                                        "name": "MINIO_SECRET_KEY",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "tfrs-minio-secret",
                                                "key": "MINIO_SECRET_KEY"
                                            }
                                        }
                                    },
                                    {
                                        "name": "AMQP_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "rabbitmq-tfrs",
                                                "key": "TFRS_PASSWORD"
                                            }
                                        }
                                    },
                                    {
                                        "name": "CLAMAV_HOST",
                                        "value": "rabbit.mem-tfrs-${ENV_NAME}.svc"
                                    },
                                    {
                                        "name": "FUEL_CODES_API_ENABLED",
                                        "value": "true"
                                    },
                                    {
                                        "name": "CREDIT_CALCULATION_API_ENABLED",
                                        "value": "true"
                                    }
                                ],
                                "resources": {
                                    "limits": {
                                        "cpu": "1",
                                        "memory": "1Gi"
                                    },
                                    "requests": {
                                        "cpu": "400m",
                                        "memory": "512Mi"
                                    }
                                },
                                "livenessProbe": {
                                    "httpGet": {
                                        "path": "/health",
                                        "port": 8080,
                                        "scheme": "HTTP"
                                    },
                                    "initialDelaySeconds": 30,
                                    "timeoutSeconds": 3,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "readinessProbe": {
                                    "httpGet": {
                                        "path": "/health",
                                        "port": 8080,
                                        "scheme": "HTTP"
                                    },
                                    "initialDelaySeconds": 30,
                                    "timeoutSeconds": 3,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "terminationMessagePath": "/dev/termination-log",
                                "terminationMessagePolicy": "File",
                                "imagePullPolicy": "IfNotPresent"
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {},
                        "schedulerName": "default-scheduler"
                    }
                }
            },
            "status": {
                "latestVersion": 0,
                "observedGeneration": 0,
                "replicas": 0,
                "updatedReplicas": 0,
                "availableReplicas": 0,
                "unavailableReplicas": 0
            }
        }
    ]
}
