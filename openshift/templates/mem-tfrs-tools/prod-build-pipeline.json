{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "prod-build-pipeline",
        "creationTimestamp": null
    },
    "objects": [
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "client-prod-angular-app-build",
                "creationTimestamp": null,
                "labels": {
                    "build": "client-prod-angular-app-build"
                }
            },
            "spec": {
                "triggers": [],
                "runPolicy": "Serial",
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/bcgov/tfrs.git",
                        "ref": "v1.0.0-hotfix"
                    },
                    "contextDir": "frontend"
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "namespace": "openshift",
                            "name": "nodejs:6"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "client-angular-app:latest"
                    }
                },
                "resources": {
                    "limits": {
                        "cpu": "1",
                        "memory": "4Gi"
                    },
                    "requests": {
                        "memory": "2Gi"
                    }
                },
                "postCommit": {},
                "nodeSelector": null,
                "successfulBuildsHistoryLimit": 5,
                "failedBuildsHistoryLimit": 5
            },
            "status": {
                "lastVersion": 0
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "client-prod",
                "creationTimestamp": null,
                "annotations": {
                    "description": "Defines how to build the client / front end image"
                }
            },
            "spec": {
                "triggers": [],
                "runPolicy": "Serial",
                "source": {
                    "type": "Dockerfile",
                    "dockerfile": "FROM client-angular-app:latest\nCOPY * /tmp/app/dist/\nCMD  /usr/libexec/s2i/run",
                    "images": [
                        {
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "client-angular-app:latest"
                            },
                            "paths": [
                                {
                                    "sourcePath": "/opt/app-root/src/public/.",
                                    "destinationDir": "tmp"
                                }
                            ]
                        }
                    ]
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "nginx-runtime:latest"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "client:latest"
                    }
                },
                "resources": {
                    "limits": {
                        "cpu": "2",
                        "memory": "4Gi"
                    }
                },
                "postCommit": {},
                "nodeSelector": null,
                "successfulBuildsHistoryLimit": 5,
                "failedBuildsHistoryLimit": 5
            },
            "status": {
                "lastVersion": 0
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "tfrs-prod",
                "creationTimestamp": null,
                "annotations": {
                    "description": "Defines how to build the application"
                }
            },
            "spec": {
                "triggers": [],
                "runPolicy": "SerialLatestOnly",
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/bcgov/tfrs.git",
                        "ref": "v1.0.0-hotfix"
                    },
                    "contextDir": "backend"
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "namespace": "openshift",
                            "name": "python:3.6"
                        },
                        "env": [
                            {
                                "name": "PIP_INDEX_URL"
                            }
                        ]
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "tfrs:latest"
                    }
                },
                "resources": {},
                "postCommit": {},
                "nodeSelector": null,
                "successfulBuildsHistoryLimit": 5,
                "failedBuildsHistoryLimit": 5
            },
            "status": {
                "lastVersion": 0
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "prod-client-pipeline",
                "creationTimestamp": null,
                "labels": {
                    "app": "prod-client-pipeline",
                    "name": "prod-client-pipeline",
                    "template": "prod-client-pipeline"
                }
            },
            "spec": {
                "triggers": [],
                "runPolicy": "Parallel",
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/bcgov/tfrs.git",
                        "ref": "v1.0.0-hotfix"
                    }
                },
                "strategy": {
                    "type": "JenkinsPipeline",
                    "jenkinsPipelineStrategy": {
                        "jenkinsfilePath": "frontend/Jenkinsfile-prod"
                    }
                },
                "output": {},
                "resources": {},
                "postCommit": {},
                "nodeSelector": {}
            },
            "status": {
                "lastVersion": 0
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "prod-tfrs-pipeline",
                "creationTimestamp": null,
                "labels": {
                    "app": "prod-tfrs-pipeline",
                    "name": "prod-tfrs-pipeline",
                    "template": "prod-tfrs-pipeline"
                }
            },
            "spec": {
                "triggers": [],
                "runPolicy": "Parallel",
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/bcgov/tfrs.git",
                        "ref": "v1.0.0-hotfix"
                    }
                },
                "strategy": {
                    "type": "JenkinsPipeline",
                    "jenkinsPipelineStrategy": {
                        "jenkinsfilePath": "backend/Jenkinsfile-prod"
                    }
                },
                "output": {},
                "resources": {},
                "postCommit": {},
                "nodeSelector": {}
            },
            "status": {
                "lastVersion": 0
            }
        }
    ]
}
