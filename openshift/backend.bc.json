{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "tfrs-backend-bc",
        "creationTimestamp": null
    },
    "parameters": [
        {
            "name": "NAME_SUFFIX",
            "description": "TFRS name suffix, such as -dev-pr-5",
            "required": true
        },
        {
            "name": "PR_NUM",
            "description": "TFRS pull request number, such as pr-5",
            "required": true
        },
        {
            "name": "TFRS_SOURCE_REPO_URL",
            "description": "TFRS Git Repo URL",
            "required": true
        },
        {
            "name": "TFRS_SOURCE_REPO_REF",
            "description": "TFRS Git Pull Request Reference, like pull/CHANGE_ID/head",
            "required": true
        }
    ],
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "tfrs-python",
                "labels": {
                    "appver": "tfrs-python"
                },
                "creationTimestamp": null,
                "annotations": {
                    "description": "TFRS Python Base Image"
                }
            },
            "spec": {
                "lookupPolicy": {
                    "local": false
                },
                "tags":[
                    {
                        "name": "3.6",
                        "annotations": null,
                        "from": {
                            "kind": "ImageStreamTag",
                            "namespace": "openshift",
                            "name": "python:3.6"
                        },
                        "importPolicy": {},
                        "referencePolicy": {
                            "type": "Source"
                        }
                    }
                ]
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "tfrs-backend${NAME_SUFFIX}",
                "creationTimestamp": null,
                "labels": {
                    "base-name":"tfrs-backend"
                },
                "annotations": {
                    "description": "Keeps track of changes in the tfrs backend image"
                }
            },
            "spec": {
                "lookupPolicy": {
                    "local": false
                },
                "tags":[ ]
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "tfrs-backend${NAME_SUFFIX}",
                "creationTimestamp": null,
                "labels": {
                    "base-name":"tfrs-backend"
                },                
                "annotations": {
                    "description": "Defines how to build tfrs backend"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "runPolicy": "Serial",
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${TFRS_SOURCE_REPO_URL}",
                        "ref": "${TFRS_SOURCE_REPO_REF}"
                    },
                    "contextDir": "backend"
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "tfrs-python:3.6"
                        },
                        "env": [
                            {
                                "name": "PIP_INDEX_URL"
                            }
                        ]
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "tfrs-backend:${PR_NUM}"
                    }
                },
                "resources": {},
                "postCommit": {},
                "nodeSelector": null
            },
            "status": {
                "lastVersion": 0
            }
        }
    ]
}
