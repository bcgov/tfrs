{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "frontend-bc",
        "creationTimestamp": null
    },
    "labels": {
        "template": "tfrs-frontend-template"
    },
    "parameters": [
        {
            "name": "NAME_SUFFIX",
            "description": "TFRS name suffix, such as -dev-pr-5",
            "required": true
        },
        {
            "name": "PR_NUM",
            "description": "TFRS pull request number, such as pr-5",
            "required": true
        },
        {
            "name": "TFRS_SOURCE_REPO_URL",
            "description": "TFRS Git Repo URL",
            "required": true
        },
        {
            "name": "TFRS_SOURCE_REPO_REF",
            "description": "TFRS Git Repo Reference of the pull request",
            "required": true
        }
      ],
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "tfrs-nodejs",
                "labels": {
                    "appver": "tfrs-nodejs"
                },
                "creationTimestamp": null,
                "annotations": {
                    "description": "TFRS Nodejs Base Image"
                }
            },
            "spec": {
                "lookupPolicy": {
                    "local": false
                },
                "tags":[
                    {
                        "name": "8",
                        "annotations": null,
                        "from": {
                            "kind": "ImageStreamTag",
                            "namespace": "openshift",
                            "name": "nodejs:8"
                        },
                        "importPolicy": {},
                        "referencePolicy": {
                            "type": "Source"
                        }
                    }
                ]
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "tfrs-frontend-angular-app",
                "generation": 1,
                "creationTimestamp": null,
                "labels": {
                    "base-name":"tfrs-frontend-angular-app"
                },
                "annotations": {
                    "description": "Keeps track of changes in tfrs frontend image"
                }
            },
            "spec": {
                "lookupPolicy": {
                    "local": false
                },
                "tags": [ ]
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "tfrs-frontend",
                "creationTimestamp": null,
                "labels": {
                    "base-name":"tfrs-frontend"
                },
                "annotations": {
                    "description": "This applies nginx on top of tfrs-frontend-angular-app"
                }
            },
            "spec": {
                "lookupPolicy": {
                    "local": false
                },
                "tags": [ ]
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "tfrs-frontend-angular-app${NAME_SUFFIX}",
                "creationTimestamp": null,
                "labels": {
                    "base-name":"tfrs-frontend-angular-app"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    }
                ],
                "runPolicy": "Serial",
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${TFRS_SOURCE_REPO_URL}",
                        "ref": "${TFRS_SOURCE_REPO_REF}"
                    },
                    "contextDir": "frontend"
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "tfrs-nodejs:8"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "tfrs-frontend-angular-app:${PR_NUM}"
                    }
                },
                "resources": {},
                "postCommit": {},
                "nodeSelector": null
            },
            "status": {
                "lastVersion": 0
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "tfrs-frontend${NAME_SUFFIX}",
                "creationTimestamp": null,
                "annotations": {
                    "description": "Defines how to build the frontend image"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "runPolicy": "Serial",
                "source": {
                    "type": "Dockerfile",
                    "dockerfile": "FROM tfrs-frontend-angular-app:${PR_NUM}\nCOPY * /tmp/app/dist/\nCMD  /usr/libexec/s2i/run",
                    "images": [
                        {
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "tfrs-frontend-angular-app:${PR_NUM}"
                            },
                            "paths": [
                                {
                                    "sourcePath": "/opt/app-root/src/public/.",
                                    "destinationDir": "tmp"
                                }
                            ]
                        }
                    ]
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "nginx-runtime:latest"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "tfrs-frontend:${PR_NUM}"
                    }
                },
                "resources": {},
                "postCommit": {},
                "nodeSelector": null
            },
            "status": {
                "lastVersion": 0
            }
        }
    ]
}
